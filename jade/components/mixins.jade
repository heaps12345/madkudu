mixin input-field(type, id, placeholder, label, name, required)
	- classes = (!required ? 'form-group' : 'form-group required')
	- required_attr = (!required ? '' : 'required')
	div(class=classes)
		label(for="#{id}") #{label}
		input.form-control(type="#{type}", id="#{id}", placeholder=placeholder, name="#{name}", required=required_attr)
