mixin customer-list()
	ul.customer
		block


//- If want to use Background image in Customer logo list,
//- set bg variable to 'true' and add additional css per customer name

mixin customer_item(name, image, url, bg)
	li
		.centering
			.centering-inner
				if (bg == false)
					if (image != false)
						img(src='images/customer/'+image+'@2x.png', alt=name)
				else 
					div(class=["image-bg", "image-customer", image])
					
				if (url!=false)
					a(href=url, title=name) Case Study


