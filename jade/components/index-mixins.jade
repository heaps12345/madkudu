mixin data-box-1(data, index)
	div(class=["data-box", "data-box-" + data[index].illustration])
		if (data[index].illustrationtext)
			.data-box--arrow 
				.centering
					.centering-inner #{data[index].illustrationtext}
		.illustration
		.bio
			if (data[index].name)
				p 
					span Name:
					span #{data[index].name}
			if (data[index].title)
				p
					span Title:
					span #{data[index].title}
			if (data[index].company)
				p
					span Company:
					span #{data[index].company}
			if (data[index].companysize)
				p
					span No. Employees:
					span #{data[index].companysize}
			if (data[index].callcount)
				p.mt
					span Calls Made:
					span #{data[index].callcount}
			if (data[index].emailcount)
				p
					span Emails Sent:
					span #{data[index].emailcount}


mixin data-box-2(data,index)
	div(class=["data-box", "data-box-" + data[index].illustration])
		.illustration
		.bio
			if (data[index].name)
				p 
					span Name:
					span #{data[index].name}
			if (data[index].title)
				p
					span Title:
					span #{data[index].title}
			if (data[index].sectiontitle)					
				p
					strong #{data[index].sectiontitle}
				if (data[index].segment || data[index].score || data[index].reason || data[index].industry)
				ul
					if (data[index].segment)
						li
							p
								span - Segment:
								span #{data[index].segment}
					if (data[index].score)
						li
							p
								span - Score:
								span #{data[index].score}
					if (data[index].reason)
						li
							p
								span - Reason:
								span #{data[index].reason}
					if (data[index].industry)
						li.mt
							p
								span Industry:
								span #{data[index].industry}


