mixin integration-list()
	ul
		block


//- If want to use Background image in Integration logo,
//- set bg variable to 'true' and add additional css per integration name

mixin integration_item(name, image, index, bg)
	if (index < 12)
		if (index > -1 && index < 3)
			- className = "first"
		else if(index > 2 && index < 7)
			- className = "second"
		else
			- className = "third"
		
		li(class=[className])
			.centering
				.centering-inner
					if (bg == false)
						if (image != false)
							img(src='images/integration/'+image+'@2x.png', alt=name)
					else 
						div(class=["image-bg", "image-integration", image])


