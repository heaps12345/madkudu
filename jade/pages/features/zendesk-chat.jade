extends ../../components/skeleton.jade

include ../../components/mixins.jade

block head

  include ../../components/zendesk.jade

block neck
  title MadKudu | Zendesk

  script analytics.page('Zendesk')

block body

  script.
    function getParameterByName(name) {
      var url = window.location.href;
      name = name.replace(/[\[\]]/g, '\\$&');
      var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
          results = regex.exec(url);
      if (!results) return null;
      if (!results[2]) return '';
      return decodeURIComponent(results[2].replace(/\+/g, ' '));
    }

  script.
    window.zE(function() {
      var email = getParameterByName('email');
      console.log(email);
      window.zE.identify({ email: email });
    });

  .background-white

    include ../../components/header_white.jade

    section
      .container

        p If this were a real app, this would be the first page!

        p#zendesk_onboarding_text Our algorithm is currently scoring you up. If you're qualified, the chat on the bottom right will open up with a personalized error message.
