DirectoryIndex index.html index.php index.htm parking-page.html

# Redirect http://madkudu.com to http://www.madkudu.com
RewriteEngine On
RewriteCond %{HTTP_HOST} ^madkudu.com
RewriteRule (.*) http://www.madkudu.com/$1 [R=301,L]

# Redirect http://www.madkudu.com/index.html to http://www.madkudu.com
RewriteRule ^index\.html$ http://www.madkudu.com/ [L,R=301]

# Redirect http://www.madkudu.com/index.html to http://www.madkudu.com
RewriteRule ^index\.html$ http://www.madkudu.com/ [L,R=301]

# Redirect /newsletter
Redirect 301 /newsletter /blog/newsletter

